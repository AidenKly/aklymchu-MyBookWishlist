<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:id="@id/book_count_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"/>
    <TextView
        android:id="@id/book_count_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/count_books_text"/>
    <TextView
        android:id="@id/read_count_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"/>
    <TextView
        android:id="@+id/read_count_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/read_books_text"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/book_list"
        android:clickable="true"
        android:focusable="true"

        >
    </ListView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_add_book"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/add_book_button"
        android:focusable="true"
        android:src="@android:drawable/ic_input_add"
        />
</LinearLayout>